<?xml version="1.0" encoding="utf-8"?>
<set android:interpolator="@android:anim/overshoot_interpolator" xmlns:android="http://schemas.android.com/apk/res/android">
	    <scale
	        android:fromXScale="0.5"
	        android:toXScale="1"
	        android:fromYScale="0.5"
	        android:toYScale="1"
	        android:pivotX="50%"
	        android:pivotY="75%"
	        android:fillAfter="false"
	        android:duration="300" />
